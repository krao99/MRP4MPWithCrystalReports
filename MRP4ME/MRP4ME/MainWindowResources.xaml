                                        </BeginStoryboard>
                                    </EventTrigger>
                                </StackPanel.Triggers>
                            </StackPanel>
                            <StackPanel Name="panelReports" Height="26">
                                <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="Reports" 
