<!-- 
This resource dictionary is used by the MainWindow. 
-->
<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:vm="clr-namespace:MRP4ME.ViewModel"
  xmlns:vw="clr-namespace:MRP4ME.View"
  x:Class="mainWindowresource"
  xmlns:local="clr-namespace:MRP4ME.UIElementsLib"
  >

    <local:BoolToVisibleConveter x:Key="BoolToVisConverter"/>
    <local:TabItemBackgroundColourConverter x:Key="TabItemBackgroundColourConverter"/>
    
    <!-- 
        This template applies an Home view  to an instance 
        of the HomeViewModel class shown in the main window.
    -->
    <DataTemplate DataType="{x:Type vm:HomeViewModel}">
        <vw:HomeView />
    </DataTemplate>

    <!-- 
        This template applies an Sales Order view to an instance 
        of the SalesOrderView class shown in the main window.
    -->
    <DataTemplate DataType="{x:Type vm:SalesOrderViewModel}">
        <vw:SalesOrderView />
    </DataTemplate>

    <!-- 
        This template applies an BOM view  to an instance 
        of the BOMDashBoardViewModel class shown in the main window.
    -->
    <DataTemplate DataType="{x:Type vm:BOMViewModel}">
        <vw:BOMView />
    </DataTemplate>
    
    <!-- 
        This template applies an Locate BOM view instance 
        of the LocateBOMViewModel class shown in the main window.
    -->
    <DataTemplate DataType="{x:Type vm:LocateBOMViewModel}">
        <vw:LocateBOM />
    </DataTemplate>

    <!-- 
        This template applies an BOM DashBoard view to an instance 
        of the BOMDashBoardViewModel class shown in the main window.
    -->
    <DataTemplate DataType="{x:Type vm:BOMDashBoardViewModel}">
        <vw:BOMDashBoardView />
    </DataTemplate>
    <!-- 
        This style configures the main content areas in the main window.
    -->
  <Style x:Key="MainHCCStyle" TargetType="{x:Type HeaderedContentControl}">
    <Setter Property="HeaderTemplate">
      <Setter.Value>
        <DataTemplate>
          <Border 
            Background="#FF0F9D58" 
            BorderBrush="#FFE2FEE2" 
            BorderThickness="1" 
            CornerRadius="5" 
            Margin="4" 
            Padding="4" 
            SnapsToDevicePixels="True" Height="66" 
            >
            <TextBlock 
              FontSize="36"
              FontWeight="Bold"
              Foreground="#FFE2A023" 
              HorizontalAlignment="Center"  
              Text="{TemplateBinding Content}" FontFamily="Trebuchet MS" 
              />
          </Border>
        </DataTemplate>
      </Setter.Value>
    </Setter>
    <Setter Property="IsTabStop" Value="False" />
    <Setter Property="Template">
      <Setter.Value>
        <!-- 
        This template ensures that content of a HeaderedContentControl 
        fills the available vertical space. 
        -->
        <ControlTemplate TargetType="{x:Type HeaderedContentControl}">
          <DockPanel>
            <ContentPresenter 
              DockPanel.Dock="Top"
              ContentSource="Header" 
              ContentTemplate="{TemplateBinding HeaderTemplate}" 
                
              />
            <ContentPresenter 
              ContentSource="Content" 
              ContentTemplate="{TemplateBinding ContentTemplate}" 
              />
          </DockPanel>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
    <!-- 
  This style configures logo in the main content area in the main window.
  -->
    <Style x:Key="MainHCCLogoStyle" TargetType="{x:Type HeaderedContentControl}">
        <Setter Property="HeaderTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Border 
            Background="Transparent" 
            BorderBrush="#FFE2FEE2" 
            BorderThickness="1" 
            CornerRadius="5" 
            Margin="1" 
            Padding="1" 
            SnapsToDevicePixels="True" Height="100" 
            >
                        <Image  Source="Images/MRP4MElogo.jpg" Stretch="Fill"/>
                    </Border>
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <!-- 
        This template ensures that content of a HeaderedContentControl 
        fills the available vertical space. 
        -->

                <ControlTemplate TargetType="{x:Type HeaderedContentControl}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <ContentPresenter DockPanel.Dock="Top" ContentSource="Header"  
                                          ContentTemplate="{TemplateBinding HeaderTemplate}" Grid.Row="0"
                            />
                        <ContentPresenter ContentSource="Content" 
                                          ContentTemplate="{TemplateBinding ContentTemplate}" Grid.Row="1"
                            />
                    </Grid>
                </ControlTemplate>
                
            </Setter.Value>
        </Setter>
    </Style>

    <!--
  This style ensures that the borders in the main window are consistent.
  -->
  <Style x:Key="MainBorderStyle" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="#FFE2FEE2" />
        <Setter Property="BorderBrush" Value="#FF0F9D58" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="5" />
    <Setter Property="SnapsToDevicePixels" Value="True" />
  </Style>

  <!--
