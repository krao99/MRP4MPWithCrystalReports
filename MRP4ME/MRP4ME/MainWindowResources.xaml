                                    <Label.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FF0F9D58" Offset="0.01"/>
                                            <GradientStop Color="#FF0F9D58" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Label.Background>
